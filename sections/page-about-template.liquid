{% capture max_width %}
    {% unless section.settings.max_width == blank %}
        {{ section.settings.max_width | prepend: 'max-width: ' | append: 'px;' }}
    {% endunless %}
{% endcapture %}

<article class="">
  <div
    class="mx-auto"
    style="{{ max_width }}"
  >
    <!-- Image -->
    {% unless section.settings.img == blank %}
      {% assign img_size = section.settings.img_width | append: 'x' | append: section.settings.img_height %}
      <img
        class="img-fluid mb-5 {% if section.settings.img_thumbnail %}img-thumbnail{% else %}rounded{% endif %}"
        src="{{ section.settings.img | img_url: img_size, crop: 'center' }}"
        alt="{{ section.settings.img.alt }}"
        width="{{ section.settings.img_width }}"
        height="{{ section.settings.img_height }}"
      >
    {% endunless %}
    {% comment %}
      <!-- Header -->
      <header class="heading-wrapper mb-2 overflow-hidden text-center">
        <!-- Heading -->
        <h1 class="heading {{ section.settings.heading_size }}">
          {{ page.title }}
        </h1>
      </header>
    {% endcomment %}
    <!-- Description -->
    <div class="description rte">
      {{ page.content }}
    </div>
    <div class="image-with-text">
      <div class="container">
        <div class="row my-10">
          <div class="col-md-6">
            <div class="normal-heading-text">
              {% unless section.settings.box1_heading == blank -%}
                <h2 class="heading h2">{{ section.settings.box1_heading }}</h2>
              {%- endunless %}
              {% unless section.settings.box1_desc == blank %}{{ section.settings.box1_desc }}{% endunless %}
            </div>
          </div>
          <div class="col-md-6">
            <div class="contact-box-img">
              {% if section.settings.left_img == blank %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg bg-light img-fluid' }}
              {% else %}
                {% assign img_size = section.settings.img_width | append: 'x' | append: section.settings.img_height %}
                <img
                  class=" img-fluid h-auto mb-3 {% if section.settings.img_thumbnail %}{% else %}{% endif %}"
                  src="{{ section.settings.left_img | img_url: img_size, crop: 'center' }}"
                  alt="{{ section.settings.left_img.alt | escape }}"
                  loading="lazy"
                >
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="who-we-are pink-bg pt-10">
      <div class="container">
        <div class="row mb-8">
          <div class="col-md-12">
            {% unless section.settings.whoWeAreHeading == blank -%}
              <h2 class="heading h2 text-center mb-5">{{ section.settings.whoWeAreHeading }}</h2>
            {%- endunless %}
          </div>
          <div class="col-md-6">
            <div class="why-cuzi">
              <div class="box-img">
                {% if section.settings.why_img == blank %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg bg-light img-fluid' }}
                {% else %}
                  {% assign img_size = section.settings.img_width | append: 'x' | append: section.settings.img_height %}
                  <img
                    class="mt-3 img-fluid h-auto mb-2 {% if section.settings.img_thumbnail %}{% else %}{% endif %}"
                    src="{{ section.settings.why_img | img_url: img_size, crop: 'center' }}"
                    alt="{{ section.settings.why_img.alt | escape }}"
                    loading="lazy"
                  >
                {% endif %}
              </div>
              {% unless section.settings.why_heading == blank -%}
                <h2 class="heading h2 text-start">{{ section.settings.why_heading }}</h2>
              {%- endunless %}
              {% unless section.settings.why_desc == blank -%}
                <p>{{ section.settings.why_desc }}</p>
              {%- endunless %}
            </div>
          </div>
          <div class="col-md-6">
            <div class="how-cuzi">
              <div class="box-img">
                {% if section.settings.how_we_img == blank %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg bg-light img-fluid' }}
